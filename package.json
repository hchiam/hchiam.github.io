{
  "name": "hchiam.github.io",
  "version": "4.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "deploy": "next build && next export && yarn deploy:surge && yarn deploy:gh-pages",
    "deploy:surge": "surge out https://hchiam.surge.sh",
    "deploy:gh-pages": "git subtree push --prefix out origin gh-pages",
    "surge": "yarn deploy",
    "reminder": "echo; echo 'Reminder: Do you need to \\033[1;34m[skip ci]\\033[0m?'; echo;"
  },
  "dependencies": {
    "next": "^10.0.6",
    "next-pwa": "^5.0.5",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-jsx": "^3.4.2",
    "webpack": "^4.46.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run reminder"
    }
  },
  "devDependencies": {
    "@lhci/cli": "^0.7.0",
    "husky": "^4.3.8"
  }
}
