---
import Layout from "../layouts/Layout.astro";
import LogoImg from "../components/LogoImg.astro";
import ImageLink from "../components/ImageLink.astro";
import CursorDecoration from "../components/CursorDecoration.astro";
import Contact from "../components/Contact.astro";
import TranslateButton from "../components/TranslateButton.astro";

const linkImageStyles = `
		--img-size: 75px;
		border-radius: 50%;
		height: var(--img-size);
		width: var(--img-size);
		padding: var(--size-2);
`;
---

<Layout
  title="Howard Chiam"
  description="Howard's profile page - a sample of projects, certificates, and starting points to explore."
>
  <CursorDecoration />
  <main>
    <div class="logo-section">
      <LogoImg
        src="htc.png"
        alt="HC"
        width="100px"
        height="100px"
        tabindex="0"
      />
    </div>

    <h1
      class="animation"
      title="This is my name. Hi!"
      tabindex={0}
      data-translation-title="C'est mon nom. Salut !"
    >
      Howard Chiam
    </h1>

    <div class="name-section">
      <h2
        class="tagline"
        data-translation="Apprentissage. Langues. Autres choses."
      >
        Learning. Languages. Other&nbsp;stuff.
      </h2>
      <div class="tagline-details-shadow-container">
        <div id="tagline_details" class="tagline-details">
          <p
            data-translation="Chuis développeur web front-end et nerd des langues, qui s'intéresse à plusieurs choses telles que :"
          >
            I'm a Front-End web developer and language nerd with interests in
            things like:
          </p>
          <ul>
            <li>
              <span data-translation="l'éducation,">education,</span>
            </li>
            <li>
              <span data-translation="l'accessibilité web,"
                >web accessibility,</span
              >
              <i data-translation="et">and</i>
            </li>
            <li>
              <span data-translation="l'apprentissage automatique."
                >machine learning.</span
              >
            </li>
          </ul>
          <p
